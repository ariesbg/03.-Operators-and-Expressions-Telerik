/*Problem 4. Rectangles

    Write an expression that calculates rectangleâ€™s perimeter and area by given width and height.
*/

using System;

class Rectangles
{
    static void Main()
    {
        Console.WriteLine("Enter a rectangle's width: ");
        int width = int.Parse(Console.ReadLine());
        Console.WriteLine("Enter a rectangle's height: ");
        int height = int.Parse(Console.ReadLine());

        int perimeter = 2 * width + 2 * height;
        Console.WriteLine("The perimeter of a rectangle with those width and height is: {0}", perimeter);

        int area = width * height;
        Console.WriteLine("The area of a rectangle with those width and height is: {0}", area);
    }
}
